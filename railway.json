{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "discourse",
      "source": {
        "repo": "https://github.com/YOUR-USERNAME/discourse"
      },
      "deploy": {
        "startCommand": "bundle exec rails server -b 0.0.0.0 -p $PORT"
      },
      "envVars": {
        "RAILS_ENV": "production",
        "DISCOURSE_HOSTNAME": "${{RAILWAY_STATIC_URL}}",
        "DATABASE_URL": "${{DATABASE_URL}}",
        "REDIS_URL": "${{REDIS_URL}}"
      }
    }
  ],
  "databases": [
    {
      "name": "postgres",
      "engine": "POSTGRESQL"
    },
    {
      "name": "redis", 
      "engine": "REDIS"
    }
  ]
}